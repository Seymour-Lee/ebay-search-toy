<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsTabProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scrollbars="none"
                android:id="@+id/image_gallery_scroll">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/image_gallery_layout"/>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="28dp"
                android:text="Title"
                android:textColor="@color/user_score_background"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/product_price_shipping"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/product_table_row_height"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:text="price and shipping"
                android:textSize="@dimen/product_table_title_font_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/product_highlights_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    app:materialIcon="information"
                    app:materialIconColor="#737373"
                    app:materialIconSize="24dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/product_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Highlights"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/product_table_title_font_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Subtitle"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/product_table_row_font_size" />

                        <TextView
                            android:id="@+id/product_subtitle"
                            android:layout_width="255dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:singleLine="false"
                            android:text="TextView"
                            android:textSize="@dimen/product_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/product_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Price"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/product_table_row_font_size" />

                        <TextView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/product_table_row_height"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textSize="@dimen/product_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/product_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Brand"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/product_table_row_font_size" />

                        <TextView
                            android:id="@+id/product_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/product_table_row_height"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textSize="@dimen/product_table_row_font_size" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/product_specifications_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    app:materialIcon="wrench"
                    app:materialIconColor="#737373"
                    app:materialIconSize="24dp" />

                <TableLayout
                    android:id="@+id/product_specifies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/product_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Specifications"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/product_table_title_font_size"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>