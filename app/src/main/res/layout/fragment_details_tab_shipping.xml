<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsTabShipping">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shipping_sold_by_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="center"
                app:materialIcon="truck"
                app:materialIconColor="#000"
                app:materialIconSize="24dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sold By" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store Name" />

                    <TextView
                        android:id="@+id/shipping_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback Score" />

                    <TextView
                        android:id="@+id/shipping_feedback_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="213216" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popularity" />

                    <!--<TextView-->
                        <!--android:id="@+id/shipping_popularity"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="TextView" />-->
                    <com.wssholmes.stark.circular_score.CircularScoreView
                        android:id="@+id/shipping_popularity"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:score="50"
                        app:setPrimaryColor="#f94b1f"
                        app:setSecondaryColor="#fff"
                        app:setBackgroundColor="#00000000"
                        app:setTextColor="#000"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback Star" />

                    <TextView
                        android:id="@+id/shipping_feedback_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shipping_info_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="center"
                app:materialIcon="ferry"
                app:materialIconColor="#000"
                app:materialIconSize="24dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping Info" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping Cost" />

                    <TextView
                        android:id="@+id/shipping_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Free Shipping" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Global Shipping" />

                    <TextView
                        android:id="@+id/shipping_global"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Handling Time" />

                    <TextView
                        android:id="@+id/shipping_handling_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 day" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition" />

                    <TextView
                        android:id="@+id/shipping_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Previously Sold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shipping_return_policy_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="center"
                app:materialIcon="truck_fast"
                app:materialIconColor="#000"
                app:materialIconSize="24dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return Policy" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Policy" />

                    <TextView
                        android:id="@+id/shipping_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Returns Accepted" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return within" />

                    <TextView
                        android:id="@+id/shipping_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 Days" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refund Mode" />

                    <TextView
                        android:id="@+id/shipping_refund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Money Back" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipped by" />

                    <TextView
                        android:id="@+id/shipping_shipped"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buyer" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>