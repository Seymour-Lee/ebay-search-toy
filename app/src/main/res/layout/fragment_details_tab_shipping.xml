<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsTabShipping">

    <!-- TODO: Update blank fragment layout -->
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@android:color/darker_gray"/>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/shipping_sold_by_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    app:materialIcon="truck"
                    app:materialIconColor="#737373"
                    app:materialIconSize="24dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Sold By"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_title_font_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Store Name"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="@color/colorPurple"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Feedback Score"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_feedback_score"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="213216"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Popularity"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <!--<TextView-->
                        <!--android:id="@+id/shipping_popularity"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="TextView" />-->
                        <com.wssholmes.stark.circular_score.CircularScoreView
                            android:id="@+id/shipping_popularity"
                            android:layout_width="24dp"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            app:score="50"
                            app:setBackgroundColor="#00000000"
                            app:setPrimaryColor="#f94b1f"
                            app:setSecondaryColor="#fff"
                            app:setTextColor="#000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Feedback Star"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <ImageView
                            android:id="@+id/feedback_star"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:paddingLeft="-10dp"
                            android:gravity="center_horizontal|left"
                            android:src="@drawable/ic_action_star_circle" />
                        <!--<Button-->
                            <!--android:id="@+id/feedback_star"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textAlignment="center"-->
                            <!--android:background="@color/buttonWhite"-->
                            <!--android:textColor="@color/textBlackColor"-->
                            <!--android:visibility="visible"-->
                            <!--/>-->
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/shipping_info_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    app:materialIcon="ferry"
                    app:materialIconColor="#737373"
                    app:materialIconSize="24dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Shipping Info"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_title_font_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Shipping Cost"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="Free Shipping"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Global Shipping"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_global"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="No"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Handling Time"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_handling_time"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="1 day"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Condition"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:ellipsize="none"
                            android:gravity="center_vertical"
                            android:scrollHorizontally="false"
                            android:text="Previously Sold"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:background="#e6e6e6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="center"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/dump_truck" />

                <!--<net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                    <!--android:id="@+id/shipping_return_policy_icon"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="60dp"-->
                    <!--android:scaleType="center"-->
                    <!--app:materialIcon="truck_fast"-->
                    <!--app:materialIconColor="#000"-->
                    <!--app:materialIconSize="24dp" />-->

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Return Policy"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_title_font_size"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Policy"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="Returns Accepted"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Return within"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_return"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="30 Days"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Refund Mode"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_refund"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="Money Back"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:gravity="center_vertical"
                            android:text="Shipped by"
                            android:textColor="@color/user_score_background"
                            android:textSize="@dimen/shipping_table_row_font_size" />

                        <TextView
                            android:id="@+id/shipping_shipped"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/shipping_table_row_height"
                            android:layout_marginLeft="@dimen/shipping_table_second_col_left_margin"
                            android:gravity="center_vertical"
                            android:text="Buyer"
                            android:textSize="@dimen/shipping_table_row_font_size" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>