<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchTab2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/wishlist_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="19dp"
        tools:listitem="@android:layout/simple_list_item_1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/wishlist_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#ee522b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wishlist_summary_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="start"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="  Wishlist total(" />

        <TextView
            android:id="@+id/wishlist_summary_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="$200.08  " />
    </LinearLayout>

</RelativeLayout>